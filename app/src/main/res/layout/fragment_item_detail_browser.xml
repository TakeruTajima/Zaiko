    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemDetailBrowserNoticeMessageContainer"
        android:orientation="vertical" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/itemDetailBrowserPrimaryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="【超高性能】精密万能高級低価格天才最高エアシリンダー【投げ売り】"
                android:textColor="?attr/textColorPrimary"
                android:textSize="?attr/textSizeHeadline" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemDetailBrowserMakerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="SMC"
                    android:textColor="?attr/textColorLink" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="品番: "
                        android:textColor="?attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/itemDetailBrowserProductModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KATASIKI-01"
                        android:textColor="?attr/textColorSecondary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="品名: "
                        android:textColor="?attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/itemDetailBrowserProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="エアシリンダー標準型"
                        android:textColor="?attr/textColorSecondary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="希望小売価格: "
                        android:textColor="?attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/itemDetailBrowserProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123,456円/箱"
                        android:textColor="?attr/textColorSecondary" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="在庫情報"
                android:textColor="?attr/textColorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="単価: "
                        android:textColor="?attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/itemDetailBrowserEquipmentPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100円/個"
                        android:textColor="?attr/textColorSecondary" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量: "
                        android:textColor="?attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/itemDetailBrowserStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/15個"
                        android:textColor="?attr/textColorSecondary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/itemDetailBrowserInventoryMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="詳しく見る"
                    android:textColor="?attr/textColorLink" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="キーワード"
                android:textColor="?attr/textColorPrimary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/itemDetailBrowserConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp">

                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/itemDetailBrowserFlow"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:flow_horizontalBias="0"
                    app:flow_horizontalGap="8dp"
                    app:flow_horizontalStyle="packed"
                    app:flow_verticalGap="2dp"
                    app:flow_wrapMode="chain"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="購入先情報"
                    android:textColor="?attr/textColorPrimary" />

                <TextView
                    android:id="@+id/itemDetailBrowserSellerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="サンエム"
                    android:textColor="?attr/textColorLink" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品名: "
                        android:textColor="?attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/itemDetailBrowserCommodityName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="エアシリンダー標準型"
                        android:textColor="?attr/textColorSecondary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="単価: "
                        android:textColor="?attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/itemDetailBrowserCommodityPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1200円/箱"
                        android:textColor="?attr/textColorSecondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/itemDetailBrowserButtonPutCart"
                        style="@style/TextAppearance.AppCompat.Widget.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="カートに入れる" />

                    <Spinner
                        android:id="@+id/itemDetailBrowserSpinner"
                        style="@android:style/Widget.Material.Light.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/itemDetailBrowserCommodityUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* 30m"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/itemDetailBrowserCommodityMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="もっと見る"
                    android:textColor="?attr/textColorLink" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="取扱い履歴"
                android:textColor="?attr/textColorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemDetailBrowserStoringHistoryMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="入出庫履歴を見る"
                    android:textColor="?attr/textColorLink" />

                <TextView
                    android:id="@+id/itemDetailBrowserBuyHistoryMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="購入履歴を見る"
                    android:textColor="?attr/textColorLink" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>