<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textItemBrowsMaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SMC" />

            <TextView
                android:id="@+id/textItemBrowsModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MGQM63-50" />

            <TextView
                android:id="@+id/textItemBrowsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="エアシリンダー"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textItemBrowsValuePerUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="管理単価:￥3,000/箱"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textItemBrowsStockTake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="たな卸し:する"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textItemBrowsOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="その他情報(リスト):登録タグ一覧、登録JANコード一覧、在庫保管場所と数量、発注先カタログ、入出庫購入履歴" />

    <TextView
        android:id="@+id/textItemBrowsId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID:1" />

    <TextView
        android:id="@+id/textItemBrowsCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="管理番号:0010001" />

    <TextView
        android:id="@+id/textItemBrowsDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登録日時:2019/10/26" />

</LinearLayout>